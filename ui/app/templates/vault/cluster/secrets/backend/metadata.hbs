<PageHeader as |p|>
  <p.top>
    <KeyValueHeader @baseKey={{baseKey}} @path="vault.cluster.secrets.backend.list" @mode={{mode}} @root={{root}} @showCurrent={{true}} />
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      {{model.id}}
    </h1>
  </p.levelLeft>
</PageHeader>
<div class="tabs-container box is-bottomless is-marginless is-fullwidth is-paddingless">
  <nav class="tabs">
    <ul>
      <LinkTo @route="vault.cluster.secrets.backend.show" @tagName="li" @activeClass="is-active">
        <LinkTo @route="vault.cluster.secrets.backend.show" @model={{model.id}}>
          Secret
        </LinkTo>
      </LinkTo>
      <LinkTo @route="vault.cluster.secrets.backend.metadata" @model={{model.id}} @tagName="li" @activeClass="is-active">
        <LinkTo @route="vault.cluster.secrets.backend.metadata">
          Metadata
        </LinkTo>
      </LinkTo>
    </ul>
  </nav>
</div>
<Toolbar>
  {{!-- ARG TODO add conditional here, shouldn't access edit if no edit to metadata access --}}
  <ToolbarActions>  
    <ToolbarLink
      @params={{array 'vault.cluster.secrets.backend.edit-metadata' model.id }}
    >
      Edit metadata
    </ToolbarLink>
  </ToolbarActions>
</Toolbar>