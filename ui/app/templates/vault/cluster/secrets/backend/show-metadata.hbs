<PageHeader as |p|>
  <p.top>
    <KeyValueHeader @baseKey={{baseKey}} @path="vault.cluster.secrets.backend.list" @mode={{mode}} @root={{root}} @showCurrent={{true}} />
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      {{model.id}}
    </h1>
  </p.levelLeft>
</PageHeader>
{{!-- tabs for show only --}}
<div class="tabs-container box is-bottomless is-marginless is-fullwidth is-paddingless">
  <nav class="tabs">
    <ul>
      <LinkTo @route="vault.cluster.secrets.backend.show" @tagName="li" @activeClass="is-active">
        <LinkTo @route="vault.cluster.secrets.backend.show" @model={{model.id}}>
          Secret
        </LinkTo>
      </LinkTo>
      <LinkTo @route="vault.cluster.secrets.backend.show-metadata" @model={{key.id}} @tagName="li" @activeClass="is-active">
        <LinkTo @route="vault.cluster.secrets.backend.show-metadata">
          Metadata
        </LinkTo>
      </LinkTo>
    </ul>
  </nav>
</div>