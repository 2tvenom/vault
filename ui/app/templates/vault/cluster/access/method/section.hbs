<PageHeader as |p|>
  <p.top>
    <KeyValueHeader @path="vault.cluster.access.methods">
      <li>
        <span class="sep">
          /
        </span>
        <LinkTo @route="vault.cluster.access.methods">
          methods
        </LinkTo>
      </li>
    </KeyValueHeader>
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      {{model.id}}
    </h1>
  </p.levelLeft>
</PageHeader>
{{section-tabs model "authShow" paths}}
{{#if (eq section "configuration")}}
  <Toolbar>
    <ToolbarActions>
      <ToolbarLink @params={{array "vault.cluster.settings.auth.configure" model.id}} @data-test-configure-link="true">
        Configure
      </ToolbarLink>
    </ToolbarActions>
  </Toolbar>
{{/if}}
{{component (concat "auth-method/" section) model=model}}
{{log (get model.authConfigs "certificate") "Auth Configs"}}
{{#each special.fieldGroups as |fieldGroup|}}
  {{#each-in fieldGroup as |group fields|}}
    {{#if (not-eq group "default")}}
      <p class="is-title">{{group}}</p>
    {{/if}}
    {{#each fields as |attr|}}
      <InfoTableRow
        @alwaysRender={{true}}
        @label={{or attr.options.label (to-label attr.name)}}
        @value={{get model.authConfigs attr.name}} />
    {{/each}}
  {{/each-in}}
  {{/each}}
